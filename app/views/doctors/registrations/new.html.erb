<div class="center-content">
  <div class="login-container">
    <h4>Sign up</h4>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      
      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, placeholder: true %>
      </div>
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, placeholder: true %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <label>(<%= @minimum_password_length %> characters minimum)</label>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", placeholder: true %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: true %>
      </div>

  <div class="field">
    <%= f.label :speciality %><br />
    <%= f.select :speciality, ['GinecologÃ­a', 'OftalmologÃ­a', 'General'], {:prompt => 'Seleccione su Especialidad'}  %>
  </div>    


  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>


  </div>
</div>
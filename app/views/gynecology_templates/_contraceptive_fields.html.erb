<div class="fields">
	<div class="double-field">
		<div>	
			<%= f.label :name %>
			<%= f.text_field :name, placeholder: true %>
		</div>
		<div>	
			<%= f.label :time %>
			<%= f.text_field :time, placeholder: true %>
		</div>
	</div>
	<div class="double-field">
		<div>	
			<%= f.label :tolerance %>
			<%= f.text_field :tolerance, placeholder: true %>
		</div>
		<div>	
			<%= f.hidden_field :_destroy %>
			<%= link_to_remove_fields "Eliminar", f %>
		</div>
	</div>
</div>